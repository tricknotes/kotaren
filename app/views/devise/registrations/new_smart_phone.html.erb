<div data-role="page" id="sign-in" data-theme="a">
  <div data-role="header"><h1>新規登録</h1></div> 

  <div data-role="content"> 
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count,"error") %></h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => { :class => "form-horizontal"}) do |f| %>
    <fieldset>
      <h3>必須項目</h3>
      <div class="control-group">
        <div class="controls">
          <%= f.text_field :name, :placeholder => "Name" %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.email_field :email, :placeholder => "Email" %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.password_field :password, :placeholder => "Password" %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %>
        </div>
      </div>

      <h3>オプション項目</h3>
      <div class="control-group">
        <div class="controls">
          <%= f.text_field :twitter_name, :placeholder => "Twitter ID" %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.text_field :youtube_name, :placeholder => "Youtube ID" %>
        </div>
      </div>
       <div class="control-group">
        <div class="controls">
          <%= f.text_field :guitar, :placeholder => "Main guitar name" %>
        </div>
      </div>
       <div class="control-group">
        <div class="controls">
          <%= f.text_field :tuning, :placeholder => "Favolite tuning" %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit "登録", :class => "btn btn-primary" %>
        </div>
      </div>
    </fieldset>
  <% end %>
  </div>
</div>

