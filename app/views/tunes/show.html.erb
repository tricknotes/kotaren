<script>                                                                          
$(document).ready(function(){                                                     
  $('#detail-tabs').tabs();
  $(".progress-bar").each(function(elem){                                             
    $(this).progressBar(progress_default_option);                                 
  });                                                                             

  $('#detail-tabs ul li a').click(
    function(){
      var comments_id = $(this).attr("id") + "s";

      $("#my_comments").hide();
      $("#other_comments").hide();
      $("#" + comments_id).fadeIn();
    }
  );

  $("#my_comment").click();

  $.ajax({
    dataType: "jsonp",
    data: {
      "vq": "押尾コータロー <%= @tune.title %>",
      "orderby": "relevance",
      "start-index": 1,
      "max-results": 12,
      "alt":"json-in-script"
    },
    cache: false,
    url: "http://gdata.youtube.com/feeds/api/videos",
    success: function (data) {
      $.each(data.feed.entry, function(i,item){
        var group = item.media$group;

         var youtube_link_a = $("<a/>").attr("href",group.media$player[0].url).attr("title","").addClass("prettyPhoto").prettyPhoto();
         var thumb_div = $("<div/>").addClass("thumbnail-video ui-widget-content ui-corner-all")
           .append($("<img/>").attr("src", group.media$thumbnail[0].url)).append("<br/")
           .append(item.title.$t).append("<br/>") 
           .append(item.author[0].name.$t).append("<br/>") 
           .append($("<span/>").addClass("info").text("再生回数：" + ((item.yt$statistics == null) ? "0" : item.yt$statistics.viewCount)));
         
         youtube_link_a.append(thumb_div).appendTo("#ref-videos");
        
      });
    }
  });

  $('#sub-contents').tabs();
  $('#sub-contents ul li a').click(
    function(){
      var comments_id = $(this).attr("id") + "s";

      $("#ref-videos").hide();
      $("#play-users").hide();
      $("#" + comments_id).fadeIn();
    }
  );

  applyYoutubin("#my_comments .comment-text a");
  applyYoutubin("#other_comments .comment-text a");

  $("#ref-video").click();
});
</script>     

<div class="container-fluid">
  <%= render "layouts/title" %>

  <div class="row-fluid">
    <div class="span1"></div>
    <div class="span4">
      <div id="detail">
        <div id="detail-tabs">
          <div class="out-of-tabs">
            <center>
              <p><h2><%= @tune.title %></h2></p>
              <div class="album-title">
                <p>
                  <%= raw @tune.recordings.inject([]){|albums,r| albums << r.album.title}.join("<br>") %>
                </p>
              </div> 
              <p><span class="tuning"><%= @tune.tuning.name =%></span></p>
              <% if @tune.tuning.capo != nil and @tune.tuning.capo != 0 %>
                <p><span class="tuning">(Capo : <%= @tune.tuning.capo =%>)</span></p>
              <% end %>
              <hr>
              <p><span id="progress_<%= @tune.id %>" class="progress-bar"><%= @progress_val %></span>
                <% if current_user == @user %>
                  <button class="btn" onclick="progress_controller.down('<%= @user.id %>','<%= @tune.id %>')"><font style="font-size: 14pt;"><%= "<" %></font></button>
                  <button class="btn" onclick="progress_controller.up('<%= @user.id %>','<%= @tune.id %>')"><font style="font-size: 14pt;"><%= ">" %></font></button>
                <% end %>
              </p>
                <% if current_user == @user %>
                  <button class="btn btn-success" onclick="progress_controller.play('<%= @user.id %>','<%= @tune.id %>')"><i class="icon-music icon-white"></i> 弾いたよ</font></button>
                <% end %>
 
              <div id="progress_updated_at_<%= @tune.id %>">
                <%= last_played_at(@tune.progress_updated_at(@user)) %>
              </div>
              <hr>
            </center>
          </div>
          <div id="comments">
            <center>
              <div class="out-of-tabs">
                <h3>練習記録</h3>
              </div>
            </center>
            <ul>
              <li><a id="my_comment" href="#my_comments" class="blue0">Owner</a></li>
              <li><a id="other_comment" href="#other_comments" class="blue1">Other (<%= @other_comments.count %>)</a></li>
            </ul>

              <% if @user == current_user %>
                <%= form_for(@comment, :url => user_tune_comments_path(@user,@tune,@comment), :remote => true ) do |f| %>
                  <%= f.text_area :text, :id => "my_comment_text_area", :placeholder => "Memo" %> 
                  <button class="btn"><i class="icon-pencil"></i>記録する</button>
                  <p>
                  例)<br>
                  Aメロの途中まで覚えた。<br>
                  http://www.youtube.com/watch?v=XXXXXXXXXXX
                  </p>
                <% end %>
              <% end %>

            <div id="my_comments">
              <% @comments.each do |c| %>
                <%= render "comments/comment_body", {:c => c } %>
              <% end %>
            </div>

            <div id="other_comments">
              <% @other_comments.each do |c| %>
                <%= render "comments/comment_body", {:c => c } %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="span7">
      <div id="sub-contents">
        <ul>
          <li><a id="ref-video" href="#ref-videos" class="blue0">関連動画(Youtube)</a></li>
          <li><a id="play-user" href="#play-users" class="blue1">この曲を弾いているユーザ(<%= @tune.touched_progresses.count %>人)</a></li>
        </ul>
        <div id="ref-videos"></div>

        <div id="play-users">
          <table>
            <tr>
            </tr>
            <% @tune.touched_progresses.each do |pr| %>
              <tr>
                <td><%= link_to pr.user.default_name, user_tunes_path(pr.user) %></td>
                <td><span class="progress-bar"><%= pr.percent %></span></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
