<% c = @comment %>
<div id="comment_<%= c.id %>">
  <dl>
    <dt>
      <div class="comment-date">
        <%= link_to c.created_at.strftime("%Y/%m/%d %H:%M"), comment_path(c.id) %>
      </div>
      <div style="float: right">
        <%= link_to reply_count_label(c), comment_path(c.id) %>
      </div>
    </dt>
    <br>
    <dd>
      <div class="comment-text">
        <%= vrp_player_show( auto_link( simple_format(c.text))) %>
      </div>
      <div class="comment-destroy">
        <%= link_to 'x', user_tune_comment_path(c.user,c.tune,c), :method => :delete,:remote => true, :confirm => "本当に削除しますか？" %>
      </div>
      <br>
    </dd>
  </dl>
</div>
 
